<!DOCTYPE html>
<html>
<head>
    <title>Vfitness - Admin</title>
    <link rel="shortcut icon" href="~/Content/images/icon_logo.png" />
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>tinymce.init({ selector: 'textarea' });</script>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link href="~/Content/LayoutAdmin/css/bootstrap.css" rel="stylesheet" type='text/css' />
    <!-- Custom Theme files -->
    <link href="~/Content/LayoutAdmin/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- Custom Theme files -->
    <script src="~/Content/LayoutAdmin/js/jquery.min.js"></script>
    <!-- Custom Theme files -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Metro Panel Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--webfont-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
</head>
<body>
    <style>
        .side-bar {
            min-height: 1300px;
        }
    </style>
    <div class="total-content">
        <div class="col-md-4 side-bar">
            <div class="logo text-center">
                <a href="#"><img src="~/Content/LayoutAdmin/images/logo.png" alt="" /></a>
            </div>
            <div class="navigation">
                <h3>QUẢN LÍ</h3>
                <ul>
                    <li style="font-size:20px;"><a href="@Url.Action("QuanLiSanPham","QuanLiSanPham")"><i class="fa fa-dropbox"></i></a></li>
                    <li style="margin-left:5px;"><a href="@Url.Action("QuanLiSanPham","QuanLiSanPham")">Quản Lí Sản Phẩm</a></li>
                </ul>
                <ul>
                    <li style="font-size:20px;"><a href="@Url.Action("TaoMoi","QuanLiSanPham")"><i class="fa fa-plus"></i></a></li>
                    <li style="margin-left:10px;"><a href="@Url.Action("TaoMoi","QuanLiSanPham")">Thêm Sản Phẩm</a></li>
                </ul>
                <ul>
                    <li style="font-size:20px;"><a href="@Url.Action("DSSPHetHang","QuanLiNhapHang")"><i class="fa fa-hourglass-3"></i></a></li>
                    <li style="margin-left:7px;"><a href="@Url.Action("DSSPHetHang","QuanLiNhapHang")">DSSP Gần Hết Hàng <font style="font-weight:bold;">(@ViewBag.SoLuongTon)</font></a></li>
                </ul>
                <ul>
                    <li style="font-size:20px;"><a href="@Url.Action("ChuaThanhToan","QuanLiDonHang")"><i class="fa fa-shopping-cart"></i></a></li>
                    <li style="margin-left:5px;"><a href="@Url.Action("ChuaThanhToan","QuanLiDonHang")">Quản Lí Đơn Hàng</a></li>
                </ul>
            </div>
            <div class="navigation">
                <h3>THỐNG KÊ</h3>
                <ul>
                    <li style="font-size:20px;"><a href="@Url.Action("ThongKeTong","Admin")"><i class="fa fa-line-chart"></i></a></li>
                    <li style="margin-left:5px;"><a href="@Url.Action("ThongKeTong","Admin")">Thống Kê Tổng</a></li>
                </ul>
                <ul>
                    <li style="font-size:20px;"><a href="@Url.Action("DoanhThuThang","Admin")"><i class="fa fa-bar-chart"></i></a></li>
                    <li style="margin-left:5px;"><a href="@Url.Action("DoanhThuThang","Admin")">Thống Kê Tháng / Năm</a></li>
                </ul>
            </div>
            <div class="navigation">
                <h3>QUẢN LÍ TÀI KHOẢN</h3>
                <ul>
                    <li style="font-size:20px;"><a href="@Url.Action("QuanLiThanhVienAdmin","QuanLiThanhVien")"><i class="fa fa-user"></i></a></li>
                    <li style="margin-left:5px;"><a href="@Url.Action("QuanLiThanhVienAdmin","QuanLiThanhVien")">Tài Khoản</a></li>
                </ul>
                <ul>
                    <li style="font-size:20px;"><a href="@Url.Action("ThemThanhVien","QuanLiThanhVien")"><i class="fa fa-user-plus"></i></a></li>
                    <li style="margin-left:5px;"><a href="@Url.Action("ThemThanhVien","QuanLiThanhVien")">Thêm Thành Viên</a></li>
                </ul>
            </div>
        </div>
        <div class="col-md-9 content">
            @RenderBody()
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="footer">
        <div class="copyright text-center">
            <p>© 2020 Vfitness All Rights Reserved</p>
        </div>
    </div>
</body>
</html>
